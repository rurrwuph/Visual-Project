<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #2b2b2b;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.reaction_time.Result1Controller">
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #3a3a3a; -fx-padding: 30; -fx-background-radius: 10;">
            <Label style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" text="Test 1 Results" />

            <VBox alignment="CENTER_LEFT" spacing="10">
                <Label fx:id="currentTimeLabel" style="-fx-text-fill: #00ffcc; -fx-font-size: 18px;" />
                <Label fx:id="bestTimeLabel" style="-fx-text-fill: #ffcc00; -fx-font-size: 18px;" />
                <Label fx:id="comparisonLabel" style="-fx-text-fill: white; -fx-font-size: 16px;" />
            </VBox>

            <Button onAction="#playAgain" style="-fx-background-color: #00ffcc; -fx-text-fill: #2b2b2b; -fx-font-size: 16px; -fx-pref-width: 150; -fx-pref-height: 40;" text="Play Again" />
            <Button onAction="#backToMenu" style="-fx-background-color: #ff3366; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 150; -fx-pref-height: 40;" text="Back to Menu" />
        </VBox>
    </center>
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
</BorderPane>
