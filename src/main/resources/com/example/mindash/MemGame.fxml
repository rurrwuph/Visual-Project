<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="730.0" prefWidth="920.0" styleClass="core-root" stylesheets="@MemGame.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mindash.Mem_Game">

    <!-- Title -->
    <Label layoutX="14.0" layoutY="13.0" prefHeight="50.0" prefWidth="366.0" styleClass="title-label" text="Icognitive Memory Tester">
        <font><Font name="Book Antiqua" size="30.0" /></font>
    </Label>

    <!-- Inner panel -->
    <AnchorPane layoutY="73.0" prefHeight="635.0" prefWidth="924.0" styleClass="inner-pane" stylesheets="@MemGame.css">
        <!-- Back -->
        <Button fx:id="BackButton" layoutX="16.0" layoutY="32.0" onAction="#goBack" prefHeight="38.0" prefWidth="42.0" styleClass="btn-ghost" text="⬅" />

        <!-- Narrative -->
        <Label fx:id="narrativeLabel" layoutX="20.0" layoutY="90.0" prefHeight="132.0" prefWidth="884.0" styleClass="narrative-label" text="Your memory console is ready. Rebuild different skills:  🧩 Pattern Recall — memorize a brief highlight pattern, then reproduce it as grids grow. 🔗 Association Match — flip and match pairs; previews are limited and boards get denser. 🗣️ Verbal Memory — a word appears; choose NEW if it’s the first time you’ve seen it, SEEN if it already appeared. " wrapText="true" />

        <!-- Game cards -->
        <Button fx:id="patternRecallBtn" layoutX="37.0" layoutY="291.0" onAction="#launchPatternRecall" prefHeight="194.0" prefWidth="242.0" styleClass="btn-primary" text="Pattern Recall" textAlignment="CENTER" wrapText="true" />

        <Button fx:id="associationMatchBtn" layoutX="341.0" layoutY="291.0" onAction="#launchAssociationMatch" prefHeight="194.0" prefWidth="242.0" styleClass="btn-primary" text="Association Match" textAlignment="CENTER" wrapText="true" />

        <Button fx:id="timelineScrollBtn" layoutX="642.0" layoutY="291.0" onAction="#launchTimelineScroll" prefHeight="194.0" prefWidth="242.0" styleClass="btn-primary" text="Verbal Memory" textAlignment="CENTER" wrapText="true" />
    </AnchorPane>
</AnchorPane>
