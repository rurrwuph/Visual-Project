<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="400.0" spacing="15.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mindash.TypingCustomTextController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #a1a1a1;" text="Enter Your Custom Text:" textFill="#fffcfc" />
    <TextArea fx:id="customTextInputArea" prefHeight="150.0" prefWidth="350.0" promptText="Type or paste your custom text here (minimum 20 characters for meaningful test)..." style="-fx-font-size: 14px; -fx-padding: 8px; -fx-border-color: #cccccc; -fx-border-radius: 5px;" styleClass="custom-text-input-area" wrapText="true" />
    <Button fx:id="applyButton" onAction="#applyText" style="-fx-background-color: #3A578D; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8px 15px; -fx-border-radius: 5px;" text="Apply Text" />
    <Label fx:id="errorMessageLabel" style="-fx-text-fill: red; -fx-font-size: 12px; -fx-max-width: 350px; -fx-wrap-text: true;" text="" />
</VBox>
