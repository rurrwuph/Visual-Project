<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<BorderPane style="-fx-background-color: #2b2b2b;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.reaction_time.Test2Controller">
    <top>
        <VBox spacing="10" style="-fx-background-color: #3a3a3a; -fx-padding: 15;">
            <Label fx:id="statusLabel" style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;" text="Click red balls as they fall! Target: 0/5" />
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label style="-fx-text-fill: #ff3366;" text="Targets: " />
                <HBox spacing="5">
                    <Circle fx:id="target1" fill="gray" radius="8" />
                    <Circle fx:id="target2" fill="gray" radius="8" />
                    <Circle fx:id="target3" fill="gray" radius="8" />
                    <Circle fx:id="target4" fill="gray" radius="8" />
                    <Circle fx:id="target5" fill="gray" radius="8" />
                </HBox>
            </HBox>
            <Label fx:id="bestTimeLabel" style="-fx-text-fill: #ffcc00;" text="Best time: -- ms" />
        </VBox>
    </top>
    <center>
        <Pane fx:id="gamePane" prefHeight="600" prefWidth="600" style="-fx-background-color: #1e1e1e;" />
    </center>
</BorderPane>
